section.section.s6
    .fp-bg
        .s6-swipe
            svg(aria-hidden="true")
                use(xlink:href='#swipe')
        .s6-slider-imgs
            each gallery in s5
                .s6-slide
                    img(
                        data-lazy="/images/gallery/" + gallery.sGalleryIndexImage
                        alt=""
                    )
        .s6-slider-wrap
            button.s6-dropup
                svg(aria-hidden="true")
                    use(xlink:href='#arrow-up')
            .s6-slider-windows
                each gallery in s5
                    .s6-slide
                        div
                            h3.s6-title #{gallery.sGalleryIndexTitle}
                            p.s6-description #{gallery.tGalleryIndexText}
                            if gallery.product !== null
                                .s6-wrap
                                    if gallery.product.product_images !== null
                                        .s6-img
                                            img(
                                                data-lazy="/images/product/gallery/" + gallery.product.product_images[0].sProductImageFrontName
                                                alt=""
                                            )
                                    if gallery.brand !== null
                                        .s6-model
                                            span #{gallery.product.brand.sBrandTitle}
                                            span #{gallery.product.sProductTitle}
                                            if gallery.product.material_category !== null || gallery.product.bru !== null
                                                div
                                                    if gallery.product.material_category !== null
                                                        span #{gallery.product.material_category.sMaterialCategoryTitle}
                                                    if gallery.product.bru !== null
                                                        span &ensp; / #{gallery.product.bru.sBrusTitle}
            .s6-slider-panel    
                button.slick-prev(aria-label="Предыдущий слайд")
                    svg(aria-hidden="true")
                        use(xlink:href='#arrow-prev-a')
                .slick-pagination
                button.slick-next(aria-label="Следующий слайд")
                    svg(aria-hidden="true")
                        use(xlink:href='#arrow-next-a')
        .s6-btn-wrap
            a.btn(href="/gallery")
                span Смотреть все работы
        .s6-progress-bar
            div
