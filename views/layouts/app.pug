        .modal.fade#modal_mobile_contact(tabindex="-1", role="dialog")
            .modal-dialog.modal-dialog-centered(role="document")
                .modal-content
                    .close-modal(data-dismiss="modal")
                        i.material-icons close
                    .list
                        a.item(href="#" data-toggle="modal" data-target="#zay_modal" data-class="zay_modal_black")
                            img(src="/images/call2.svg", alt="")
                            .title Заказать обратный<br> звонок
                        a.item(href="https://api.whatsapp.com/send?phone=79779390290&text=%D0%97%D0%B4%D1%80%D0%B0%D0%B2%D1%81%D1%82%D0%B2%D1%83%D0%B9%D1%82%D0%B5")
                            img(src="/images/whatsapp.svg", alt="")
                            .title Напишите нам в<br> WhatsApp
                        a.item(href="viber://add?number=79779390290")
                            img(src="/images/social_icons/viber_rgb.svg", alt="")
                            .title Напишите нам в<br> Viber
                        a.item(href="https://telegram.me/79779390290")
                            img(src="/images/telegram.svg", alt="")
                            .title Напишите нам в<br> Telegram
                        a.item.item_5(href="tel:+74993912221")
                            .title Или вы можете перезвонить нам сами по телефону
                                span.lptracker_phone +7 (499) 391-22-21
        .modal.fade#zay_modal(tabindex="-1", role="dialog")
            .modal-dialog.modal-dialog-centered(role="document")
                .modal-content
                    .close-modal(data-dismiss="modal")
                        i.material-icons close
                    .title Закажите обратный звонок
                    .desc Вам не придется долго ждать звонка, мы сразу вас проконсультируем
                    form.form_contact(action="#" method="POST")
                        input(type="hidden" name="subject" value="Закажите обратный звонок")
                        input(type="hidden" name="metrika" value="zvonok")
                        input(type="hidden" name="page_path" value= page_path)
                        .form-group
                            label Имя
                            input(type="text" name="name" class="form-control" placeholder="Ваше имя *")
                            .invalid-feedback Необходимо указать Ваше имя
                        .form-group
                            label Телефон
                            input(type="text" name="tel" class="form-control" placeholder="Ваш номер телефона *")
                            .invalid-feedback Необходимо указать контактный номер
                        .row
                            label Удобный временной интервал для звонка
                            .col-sm-6.mb-sm-3
                                .form-group
                                    select(name="from" class="form-control")
                                        each val in times
                                            option= val
                            .col-sm-6.mb-sm-3
                                .form-group
                                    select(name="to" class="form-control")
                                        each val in times
                                            option= val
                        button.btn.btn-primary.btn-block.mb-4
                            span Заказать обратный звонок
        .modal#thanks_modal(tabindex="-1", role="dialog")
            .modal-dialog.modal-dialog-centered(role="document")
                .modal-content
                    .close-modal(data-dismiss="modal")
                        i.material-icons close
                    .title Спасибо!
                    .desc Ваша заявка отправлена
        .modal#calc_wait(tabindex="-1", role="dialog")
            .modal-dialog.modal-dialog-centered(role="document")
                .modal-content
                    .close-modal(data-dismiss="modal")
                        i.material-icons close
                    //- .title Калькулятор находится в разработке
                    .desc Калькулятор находится в разработке. <br> Воспользуйтесь формой <br> <a href="/calculation">точного расчета</a>.
        .modal#modal_development(tabindex="-1", role="dialog")
            .modal-dialog.modal-dialog-centered(role="document")
                .modal-content
                    .close-modal(data-dismiss="modal")
                        i.material-icons close
                    .title Раздел не работает
                    .desc К сожалению раздел находится в разработке.
        .modal#modal_video(tabindex="-1", role="dialog")
            .modal-dialog.modal-dialog-centered(role="document")
                .modal-content
                    .close-modal(data-dismiss="modal")
                        i.material-icons close
                    //- .title Калькулятор находится в разработке
                    #video_vimeo
        .modal#modal_gallery_owl(tabindex="-1", role="dialog")
            .modal-dialog(role="document")
                .modal-content
                    .hamburger.hamburger--spin(data-dismiss="modal" aria-label="Close")
                        .hamburger-box
                            .hamburger-inner
                    .wrap
                        .owl-carousel
